<?xml version="1.0" encoding="utf-8"?>
<resources>
	<!-- Themes -->

	  <style name="SunMobileTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
    	<!-- Set theme colors from http://www.google.com/design/spec/style/color.html#color-color-palette-->
    	<!-- colorPrimary is used for the default action bar background -->
    	<item name="colorPrimary">#20a6f8</item>
    	<!-- colorPrimaryDark is used for the status bar -->
    	<item name="colorPrimaryDark">#1976D2</item>
    	<!-- colorAccent is used as the default value for colorControlActivated
         which is used to tint widgets -->
    	<item name="colorAccent">#20a6f8</item>
  		<!-- You can also set colorControlNormal, colorControlActivated
         colorControlHighlight and colorSwitchThumbNormal. -->
 	</style>

	<!-- Application theme. -->
	<style name="SunMobileTheme" parent="SunMobileTheme.Base">
	</style>

	<!-- Navigation theme -->
	<style name="NavigationTheme" parent="SunMobileTheme">
    	<item name="android:textStyle">normal</item>
		<item name="android:listPreferredItemHeightSmall">40dp</item>
	</style>
	
    <style name="Widget.CardContent" parent="android:Widget">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">24dp</item>
        <item name="android:orientation">vertical</item>
    </style>
	
	<!-- the theme applied to the application or activity -->
    <style name="CustomHoloLightTheme"
           parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:actionMenuTextColor">@color/ActionBarTextColor</item>

        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="actionMenuTextColor">@color/ActionBarTextColor</item>
     	<item name="android:datePickerStyle">@style/MyDatePickerStyle</item>
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar"
           parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/ActionBarBackgroundColor</item>
        <item name="android:titleTextStyle">@style/MyActionBarTitleText</item>

        <!-- Support library compatibility -->
        <item name="background">@color/ActionBarBackgroundColor</item>
        <item name="titleTextStyle">@style/MyActionBarTitleText</item>
    </style>

    <!-- ActionBar title text -->
    <style name="MyActionBarTitleText"
           parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/ActionBarTextColor</item>
        <!-- The textColor property is backward compatible with the Support Library -->
    </style>

    <!-- DatePicker Style -->
    <style name="MyDatePickerStyle" parent="android:style/Widget.Material.Light.DatePicker">
    	<item name="android:headerBackground">@color/ActionBarBackgroundColor</item>
    <item name="android:calendarTextColor">@color/black</item>
    <item name="android:dayOfWeekBackground">@color/ActionBarBackgroundColor</item>
    <item name="android:yearListSelectorColor">@color/ActionBarBackgroundColor</item>
    <item name="android:datePickerMode">calendar</item>
	</style>

    <!-- SplashScreen Styles -->
	  <style name="Theme.Splash" parent="android:Theme">
	    <item name="android:windowBackground">@drawable/splashscreen</item>
	    <item name="android:windowNoTitle">true</item>
	  </style>

	<!-- ListView Styles -->
	<style name="ListViewStyle" parent="@android:style/Widget.ListView">
		<item name="android:id">@android:id/list</item>
        <item name="android:cacheColorHint">@android:color/transparent</item>
        <item name="android:listSelector">@android:color/transparent</item>
       	<item name="android:divider">@drawable/divider</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:drawSelectorOnTop">false</item>
        <item name="android:dividerHeight">3dp</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:soundEffectsEnabled">true</item>
        <item name="android:hapticFeedbackEnabled">true</item>
        <item name="android:smoothScrollbar">true</item>
        <item name="android:persistentDrawingCache">scrolling</item>
        <item name="android:drawingCacheQuality">high</item>
        <item name="android:scrollingCache">true</item>
        <item name="android:alwaysDrawnWithCache">true</item>
        <item name="android:transcriptMode">alwaysScroll</item>
        <item name="android:keepScreenOn">true</item>
        <item name="android:clickable">true</item>
        <item name="android:fadeScrollbars">true</item>
        <item name="android:fadingEdge">vertical</item>
        <item name="android:minHeight">85dp</item>
        <item name="android:scrollbarStyle">insideOverlay</item>
        <item name="android:footerDividersEnabled">true</item>
        <item name="android:headerDividersEnabled">true</item>
    </style>

	<style name="BlueGradientButtonStyle">
	    <item name="android:layout_width">150dp</item>
	    <item name="android:layout_height">38dp</item>
	    <item name="android:textColor">@drawable/buttontextcolor</item>
	    <item name="android:textSize">@dimen/TextSizeMedium</item>
	    <item name="android:textAllCaps">false</item>
	    <item name="android:fontFamily">sans-serif</item>
	    <item name="android:gravity">center</item>		
	    <item name="android:background">@drawable/bluegradientbutton</item>
	</style>	

</resources>