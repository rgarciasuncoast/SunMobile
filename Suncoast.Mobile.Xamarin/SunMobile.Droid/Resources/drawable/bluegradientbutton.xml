<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#ffffff" />
            <stroke
                android:width="1dp"
                android:color="#ff33b5e5" />
            <corners
                android:radius="5dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    
    <item android:state_enabled="false" >
        <shape>
        	<solid
                android:color="#C0C0C0" />        	
            <stroke
                android:width="1dp"
                android:color="#171717" />
            <corners
                android:radius="5dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    
            
    <item>
        <shape>
        	<solid
                android:color="#ff33b5e5" />        	            
            <stroke
                android:width="1dp"
                android:color="#ff33b5e5" />
            <corners
                android:radius="5dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>