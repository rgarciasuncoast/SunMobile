<?xml version="1.0" encoding="utf-8"?>
<com.daimajia.swipe.SwipeLayout xmlns:swipe="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/swipe"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    swipe:leftEdgeSwipeOffset="0dp"
    swipe:rightEdgeSwipeOffset="0dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#ffffff"
        android:gravity="center"
        android:tag="Bottom3">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".9"
            android:text=""
            android:textColor="#ffffff"
            android:textSize="17sp" />
        <Button
            android:id="@+id/btnViewCheck"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:background="#aaaaaa"
            android:text="View Check" />
        <Button
            android:id="@+id/btnDispute"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:background="#ff0000"
            android:text="Dispute" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <TableLayout
            android:id="@+id/rowTableLayout"
            android:clipChildren="false"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/listselector_medium">
            <TableRow
                android:id="@+id/trowItemTitle"
                android:clipToPadding="true"
                android:clipChildren="false"
                android:layout_gravity="left|center_vertical"
                android:gravity="left|center_vertical">
                <TextView
                    android:id="@+id/lblItemTitle"
                    android:layout_width="fill_parent"
                    android:textSize="@dimen/TextSizeMedium"
                    android:layout_height="wrap_content"
                    android:textColor="@color/TextViewTextColor"
                    android:paddingLeft="1dp"
                    android:text="09/30/2015"
                    android:layout_marginLeft="16dip"
                    android:paddingTop="4dp" />
                <TextView />
            </TableRow>
            <TableRow
                android:id="@+id/trowItemBody"
                android:clipChildren="false"
                android:gravity="center_vertical">
                <ImageView
                    android:id="@+id/imgItemIcon"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:paddingTop="5dp"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content"
                    android:cropToPadding="false"
                    android:src="@drawable/listitemselect"
                    android:paddingRight="2dip" />
                <TextView
                    android:id="@+id/lblItem1Text"
                    android:paddingLeft="16dip"
                    android:paddingRight="4dip"
                    android:textColor="@color/TextViewTextColor"
                    android:text="Withdrawal Transfer To Share 0000"
                    android:maxLines="4"
                    android:minLines="2"
                    android:lineSpacingMultiplier="0.90"
                    android:layout_width="wrap_content"
                    android:layout_weight="5.0"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/TextSizeMedium"
                    android:gravity="left"
                    android:layout_gravity="top" />
                <ImageView
                    android:id="@+id/imgCheck"
                    android:src="@drawable/transactioncheck"
                    android:layout_gravity="top"
                    android:paddingTop="5dp" />
                <TableLayout
                    android:clipChildren="false"
                    android:gravity="right">
                    <TableRow
                        android:clipChildren="false"
                        android:gravity="right">
                        <TextView
                            android:id="@+id/lblItem2Text"
                            android:paddingRight="8dip"
                            android:textColor="@color/TextViewTextColor"
                            android:text="$321.00"
                            android:lineSpacingMultiplier="0.90"
                            android:layout_width="110dip"
                            android:layout_weight="0"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/TextSizeMedium"
                            android:gravity="right" />
                    </TableRow>
                    <TableRow
                        android:clipChildren="false"
                        android:gravity="right">
                        <TextView
                            android:id="@+id/lblItem3Text"
                            android:paddingRight="8dip"
                            android:textColor="#ff757575"
                            android:text="$321.00"
                            android:lineSpacingMultiplier="0.90"
                            android:layout_width="110dip"
                            android:layout_weight="0"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/TextSizeSmall"
                            android:gravity="right"
                            android:paddingTop="1dp" />
                    </TableRow>
                </TableLayout>
                <ImageView
                    android:id="@+id/imgMore"
                    android:layout_width="20dp"
                    android:paddingTop="5dp"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content"
                    android:cropToPadding="false"
                    android:src="@drawable/listitemselect"
                    android:paddingRight="2dip"
                    android:minWidth="20dp" />
            </TableRow>
        </TableLayout>
    </LinearLayout>
</com.daimajia.swipe.SwipeLayout>