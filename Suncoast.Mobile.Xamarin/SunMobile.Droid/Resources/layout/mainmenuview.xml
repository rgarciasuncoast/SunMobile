<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@color/ActionBarBackgroundColor"
    android:id="@+id/RootView"
    android:fitsSystemWindows="true">
    <LinearLayout
        android:id="@+id/ListLayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:layout_above="@+id/llPopupViewer">
        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:background="#eeeeee"
            android:scrollbars="none">
            <TableLayout
                android:id="@+id/tableMainMenu"
                android:clipChildren="false"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#eeeeee">
                <TableRow
                    android:id="@+id/rowLogo"
                    android:background="@color/ActionBarBackgroundColor"
                    android:gravity="center_vertical"
                    android:minHeight="64dp">
                    <ImageView
                        android:layout_height="40dp"
                        android:paddingTop="2dp"
                        android:paddingLeft="42dp"
                        android:layout_gravity="center_vertical"
                        android:layout_span="2"
                        android:src="@drawable/companylogo"
                        android:paddingRight="2dip"
                        android:rotationX="21"
                        android:scaleX="1.8"
                        android:scaleY="1.8" />
                </TableRow>
                <TableRow
                    android:id="@+id/rowAccounts"
                    android:clipChildren="false"
                    android:background="?android:attr/selectableItemBackground"
                    android:gravity="center_vertical">
                    <ImageView
                        android:id="@+id/rowAccountsImage"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:paddingTop="5dp"
                        android:paddingLeft="10dp"
                        android:layout_gravity="center_vertical"
                        android:cropToPadding="false"
                        android:src="@drawable/ic_action_accounts_gray"
                        android:paddingRight="2dip" />
                    <TextView
                        android:id="@+id/rowAccountsText"
                        android:text="Accounts"
                        android:paddingRight="8dip"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/TextViewTextColor"
                        android:lineSpacingMultiplier="0.90"
                        android:layout_width="wrap_content"
                        android:layout_weight="5.0"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/TextSizeSmall"
                        android:gravity="left"
                        android:layout_marginLeft="20dp" />
                </TableRow>
                <TableRow
                    android:id="@+id/rowCards"
                    android:clipChildren="false"
                    android:background="?android:attr/selectableItemBackground"
                    android:gravity="center_vertical">
                    <ImageView
                        android:id="@+id/rowCardsImage"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:paddingTop="5dp"
                        android:paddingLeft="10dp"
                        android:layout_gravity="center_vertical"
                        android:cropToPadding="false"
                        android:src="@drawable/ic_action_cards_gray"
                        android:paddingRight="2dip" />
                    <TextView
                        android:id="@+id/rowCardsText"
                        android:text="Cards"
                        android:paddingRight="8dip"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/TextViewTextColor"
                        android:lineSpacingMultiplier="0.90"
                        android:layout_width="wrap_content"
                        android:layout_weight="5.0"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/TextSizeSmall"
                        android:gravity="left"
                        android:layout_marginLeft="20dp" />
                </TableRow>
                <TableRow
                    android:id="@+id/rowTransfers"
                    android:clipChildren="false"
                    android:background="?android:attr/selectableItemBackground"
                    android:gravity="center_vertical">
                    <ImageView
                        android:id="@+id/rowTransfersImage"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:paddingTop="5dp"
                        android:paddingLeft="10dp"
                        android:layout_gravity="center_vertical"
                        android:cropToPadding="false"
                        android:src="@drawable/ic_action_import_export_gray"
                        android:paddingRight="2dip" />
                    <TextView
                        android:id="@+id/rowTransfersText"
                        android:text="Transfer Funds"
                        android:paddingRight="8dip"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/TextViewTextColor"
                        android:lineSpacingMultiplier="0.90"
                        android:layout_width="wrap_content"
                        android:layout_weight="5.0"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/TextSizeSmall"
                        android:gravity="left"
                        android:layout_marginLeft="20dp" />
                </TableRow>
                <TableRow
                    android:id="@+id/rowDeposits"
                    android:clipChildren="false"
                    android:background="?android:attr/selectableItemBackground"
                    android:gravity="center_vertical">
                    <ImageView
                        android:id="@+id/rowDepositsImage"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:paddingTop="5dp"
                        android:paddingLeft="10dp"
                        android:layout_gravity="center_vertical"
                        android:cropToPadding="false"
                        android:src="@drawable/ic_action_deposits_gray"
                        android:paddingRight="2dip" />
                    <TextView
                        android:id="@+id/rowDepositsText"
                        android:text="Deposit Funds"
                        android:paddingRight="8dip"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/TextViewTextColor"
                        android:lineSpacingMultiplier="0.90"
                        android:layout_width="wrap_content"
                        android:layout_weight="5.0"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/TextSizeSmall"
                        android:gravity="left"
                        android:layout_marginLeft="20dp" />
                </TableRow>
                <TableRow
                    android:id="@+id/rowBillPay"
                    android:clipChildren="false"
                    android:background="?android:attr/selectableItemBackground"
                    android:gravity="center_vertical">
                    <ImageView
                        android:id="@+id/rowBillPayImage"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:paddingTop="5dp"
                        android:paddingLeft="10dp"
                        android:layout_gravity="center_vertical"
                        android:cropToPadding="false"
                        android:src="@drawable/ic_action_billpay_gray"
                        android:paddingRight="2dip" />
                    <TextView
                        android:id="@+id/rowBillPayText"
                        android:text="Bill Pay"
                        android:paddingRight="8dip"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/TextViewTextColor"
                        android:lineSpacingMultiplier="0.90"
                        android:layout_width="wrap_content"
                        android:layout_weight="5.0"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/TextSizeSmall"
                        android:gravity="left"
                        android:layout_marginLeft="20dp" />
                </TableRow>
                <TableRow
                    android:id="@+id/rowLoanCenter"
                    android:clipChildren="false"
                    android:background="?android:attr/selectableItemBackground"
                    android:gravity="center_vertical">
                    <ImageView
                        android:id="@+id/rowLoanCenterImage"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:paddingTop="5dp"
                        android:paddingLeft="10dp"
                        android:layout_gravity="center_vertical"
                        android:cropToPadding="false"
                        android:src="@drawable/ic_action_loancenter_gray"
                        android:paddingRight="2dip" />
                    <TextView
                        android:id="@+id/rowLoanCenterText"
                        android:text="Loan Center"
                        android:paddingRight="8dip"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/TextViewTextColor"
                        android:lineSpacingMultiplier="0.90"
                        android:layout_width="wrap_content"
                        android:layout_weight="5.0"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/TextSizeSmall"
                        android:gravity="left"
                        android:layout_marginLeft="20dp" />
                </TableRow>
                <TableRow
                    android:id="@+id/rowSunMoney"
                    android:background="?android:attr/selectableItemBackground"
                    android:clipChildren="false"
                    android:gravity="center_vertical">
                    <ImageView
                        android:id="@+id/rowSunMoneyImage"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:paddingTop="5dp"
                        android:paddingLeft="10dp"
                        android:layout_gravity="center_vertical"
                        android:cropToPadding="false"
                        android:src="@drawable/ic_action_sunmoney_gray"
                        android:paddingRight="2dip" />
                    <TextView
                        android:id="@+id/rowSunMoneyText"
                        android:text="SunMoney"
                        android:paddingRight="8dip"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/TextViewTextColor"
                        android:lineSpacingMultiplier="0.90"
                        android:layout_width="wrap_content"
                        android:layout_weight="5.0"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/TextSizeSmall"
                        android:gravity="left"
                        android:layout_marginLeft="20dp" />
                </TableRow>
                <TableRow
                    android:id="@+id/rowLocations"
                    android:clipChildren="false"
                    android:background="?android:attr/selectableItemBackground"
                    android:gravity="center_vertical">
                    <ImageView
                        android:id="@+id/rowLocationsImage"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:paddingTop="5dp"
                        android:paddingLeft="10dp"
                        android:layout_gravity="center_vertical"
                        android:cropToPadding="false"
                        android:src="@drawable/ic_action_place_gray"
                        android:paddingRight="2dip" />
                    <TextView
                        android:id="@+id/rowLocationsText"
                        android:text="Find ATM/Branch"
                        android:paddingRight="8dip"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/TextViewTextColor"
                        android:lineSpacingMultiplier="0.90"
                        android:layout_width="wrap_content"
                        android:layout_weight="5.0"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/TextSizeSmall"
                        android:gravity="left"
                        android:layout_marginLeft="20dp" />
                </TableRow>
                <TableRow
                    android:id="@+id/rowMessaging"
                    android:background="?android:attr/selectableItemBackground"
                    android:clipChildren="false"
                    android:gravity="center_vertical">
                    <ImageView
                        android:id="@+id/rowMessagingImage"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:paddingTop="5dp"
                        android:paddingLeft="10dp"
                        android:layout_gravity="center_vertical"
                        android:cropToPadding="false"
                        android:src="@drawable/ic_action_messagecenter_gray"
                        android:paddingRight="2dip" />
                    <TextView
                        android:id="@+id/rowMessagingText"
                        android:text="Message Center"
                        android:paddingRight="8dip"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/TextViewTextColor"
                        android:lineSpacingMultiplier="0.90"
                        android:layout_width="wrap_content"
                        android:layout_weight="5.0"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/TextSizeSmall"
                        android:gravity="left"
                        android:layout_marginLeft="20dp" />
                </TableRow>
                <TableRow
                    android:id="@+id/rowDocuments"
                    android:background="?android:attr/selectableItemBackground"
                    android:clipChildren="false"
                    android:gravity="center_vertical">
                    <ImageView
                        android:id="@+id/rowDocumentsImage"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:paddingTop="5dp"
                        android:paddingLeft="10dp"
                        android:layout_gravity="center_vertical"
                        android:cropToPadding="false"
                        android:src="@drawable/ic_action_documentcenter_gray"
                        android:paddingRight="2dip" />
                    <TextView
                        android:id="@+id/rowDocumentsText"
                        android:text="Documents Center"
                        android:paddingRight="8dip"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/TextViewTextColor"
                        android:lineSpacingMultiplier="0.90"
                        android:layout_width="wrap_content"
                        android:layout_weight="5.0"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/TextSizeSmall"
                        android:gravity="left"
                        android:layout_marginLeft="20dp" />
                </TableRow>
                <TableRow
                    android:id="@+id/rowProfile"
                    android:background="?android:attr/selectableItemBackground"
                    android:clipChildren="false"
                    android:gravity="center_vertical">
                    <ImageView
                        android:id="@+id/rowProfileImage"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:paddingTop="5dp"
                        android:paddingLeft="10dp"
                        android:layout_gravity="center_vertical"
                        android:cropToPadding="false"
                        android:src="@drawable/ic_action_profile_gray"
                        android:paddingRight="2dip" />
                    <TextView
                        android:id="@+id/rowProfileText"
                        android:text="My Profile"
                        android:paddingRight="8dip"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/TextViewTextColor"
                        android:lineSpacingMultiplier="0.90"
                        android:layout_width="wrap_content"
                        android:layout_weight="5.0"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/TextSizeSmall"
                        android:gravity="left"
                        android:layout_marginLeft="20dp" />
                </TableRow>
                <TableRow
                    android:id="@+id/rowAbout"
                    android:background="?android:attr/selectableItemBackground"
                    android:clipChildren="false"
                    android:gravity="center_vertical">
                    <ImageView
                        android:id="@+id/rowAboutImage"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:paddingTop="5dp"
                        android:paddingLeft="10dp"
                        android:layout_gravity="center_vertical"
                        android:cropToPadding="false"
                        android:src="@drawable/ic_action_about_gray"
                        android:paddingRight="2dip" />
                    <TextView
                        android:id="@+id/rowAboutText"
                        android:text="Contact Us"
                        android:paddingRight="8dip"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/TextViewTextColor"
                        android:lineSpacingMultiplier="0.90"
                        android:layout_width="wrap_content"
                        android:layout_weight="5.0"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/TextSizeSmall"
                        android:gravity="left"
                        android:layout_marginLeft="20dp" />
                </TableRow>
                <TableRow
                    android:id="@+id/rowSignOut"
                    android:background="?android:attr/selectableItemBackground"
                    android:clipChildren="false"
                    android:gravity="center_vertical">
                    <ImageView
                        android:id="@+id/rowSignOutImage"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:paddingTop="5dp"
                        android:paddingLeft="10dp"
                        android:layout_gravity="center_vertical"
                        android:cropToPadding="false"
                        android:src="@drawable/ic_action_signout_gray"
                        android:paddingRight="2dip" />
                    <TextView
                        android:id="@+id/rowSignOutText"
                        android:text="Sign Out"
                        android:paddingRight="8dip"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/TextViewTextColor"
                        android:lineSpacingMultiplier="0.90"
                        android:layout_width="wrap_content"
                        android:layout_weight="5.0"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/TextSizeSmall"
                        android:gravity="left"
                        android:layout_marginLeft="20dp" />
                </TableRow>
            </TableLayout>
        </ScrollView>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/llPopupViewer"
        android:visibility="gone"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_above="@+id/LayoutBottomBar"
        android:focusable="true">
        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:minHeight="@dimen/appdim_MinimumTitleHeight"
            android:layout_height="wrap_content"
            android:background="@drawable/transactionheaderbg">
            <TextView
                android:paddingLeft="3dp"
                android:textColor="@color/LabelTextColor"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="TextView"
                android:id="@+id/txtPopupTitle"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true" />
            <ImageView
                android:id="@+id/btnClosePromotion"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/close"
                android:maxWidth="30px" />
        </RelativeLayout>
        <FrameLayout
            android:id="@+id/popupcontainer"
            android:isScrollContainer="true"
            android:scrollbarStyle="outsideOverlay"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent">
            <WebView
                android:id="@+id/PopupWV"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="#FFFFFF" />
        </FrameLayout>
    </LinearLayout>
</RelativeLayout>