<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:id="@+id/mainLayout">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:background="@drawable/background_nobar"
        android:scrollbars="none">
        <TableLayout
            android:id="@+id/mainTable"
            android:stretchColumns="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TableRow
                android:id="@+id/rowSelectCard"
                android:clickable="true"
                android:focusable="true"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <TableLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clipChildren="false"
                        android:clipToPadding="false"
                        android:paddingTop="5dip">
                        <TextView
                            android:textSize="@dimen/TextSizeLarge"
                            android:textColor="@color/TextViewTextColor"
                            android:textStyle="bold"
                            android:paddingLeft="10dip"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/lblSelectCardHeader"
                            android:text="Select Card to Replace" />
                    </TableRow>
                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent">
                        <TextView
                            android:id="@+id/lblCard"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:textSize="@dimen/TextSizeLarge"
                            android:textColor="@color/TextViewTextColor"
                            android:paddingLeft="24dip"
                            android:layout_weight=".9" />
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="top"
                            android:src="@drawable/listitemselect"
                            android:paddingRight="2dip" />
                    </TableRow>
                </TableLayout>
            </TableRow>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:layout_weight="1"
                android:background="@drawable/default_separatorcolor"
                android:padding="2dip" />
            <TableRow
                android:id="@+id/rowCardImages"
                android:clickable="true"
                android:focusable="true"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/lblSelectImageHeader"
                    android:textSize="@dimen/TextSizeLarge"
                    android:textColor="@color/TextViewTextColor"
                    android:textStyle="bold"
                    android:paddingLeft="10dip"
                    android:layout_height="wrap_content"
                    android:text="Select Card Image"
                    android:layout_width="wrap_content"
                    android:paddingTop="10dp" />
            </TableRow>
            <TableRow
                android:id="@+id/rowViewPager"
                android:clickable="true"
                android:focusable="true"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <android.support.v4.view.ViewPager
                    android:id="@+id/myviewpager"
                    android:layout_width="wrap_content"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:overScrollMode="never" />
            </TableRow>
            <TableRow
                android:id="@+id/rowIndicator"
                android:clickable="true"
                android:focusable="true"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/viewPagerCountDots"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:background="#ff757575" />
            </TableRow>
            <TableRow
                android:id="@+id/rowNames"
                android:clickable="true"
                android:focusable="true"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <TableLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clipChildren="false"
                        android:clipToPadding="false"
                        android:paddingTop="5dip">
                        <TextView
                            android:textSize="@dimen/TextSizeLarge"
                            android:textColor="@color/TextViewTextColor"
                            android:textStyle="bold"
                            android:paddingLeft="10dip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/lblNamesHeader"
                            android:text="Please specify the name(s) on the account to be replaced" />
                    </TableRow>
                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent">
                        <EditText
                            android:textSize="@dimen/TextSizeLarge"
                            android:textColor="@color/TextViewTextColor"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/txtNames"
                            android:layout_weight=".9"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:hint="(Optional)" />
                    </TableRow>
                </TableLayout>
            </TableRow>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:layout_weight="1"
                android:background="@drawable/default_separatorcolor"
                android:padding="2dip" />
            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:paddingTop="10dp">
                <Button
                    android:id="@+id/btnSubmit"
                    style="@style/BlueGradientButtonStyle"
                    android:text="Submit"
                    android:layout_gravity="center"
                    android:minWidth="150dip"
                    android:minHeight="40dip" />
            </TableRow>
        </TableLayout>
    </ScrollView>
</LinearLayout>