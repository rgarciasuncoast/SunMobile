<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:segmentedgroup="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:id="@+id/mainLayout">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:background="@drawable/background_nobar"
        android:scrollbars="none">
        <TableLayout
            android:id="@+id/mainTable"
            android:stretchColumns="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TableRow
                android:id="@+id/rowAlertHeading"
                android:clickable="true"
                android:focusable="true"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <TableLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/cell_Height"
                    android:gravity="center_vertical">
                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="20dip">
                        <TextView
                            android:id="@+id/lblDescription"
                            android:text="Alert Heading"
                            android:textSize="@dimen/TextSizeMedium"
                            android:textColor="@color/TextViewTextColor"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight=".9" />
                    </TableRow>
                </TableLayout>
            </TableRow>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:layout_weight="1"
                android:background="@drawable/default_separatorcolor"
                android:padding="2dip" />
            <TableRow
                android:id="@+id/rowAlertToggle"
                android:clickable="true"
                android:focusable="true"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <TableLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/cell_Height"
                    android:gravity="center_vertical">
                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="20dip">
                        <TextView
                            android:text="Alert is"
                            android:textSize="@dimen/TextSizeMedium"
                            android:textColor="@color/TextViewTextColor"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight=".9" />
                        <Switch
                            android:id="@+id/switchEnabled"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="20dp" />
                    </TableRow>
                </TableLayout>
            </TableRow>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:layout_weight="1"
                android:background="@drawable/default_separatorcolor"
                android:padding="2dip" />
            <TableRow
                android:id="@+id/rowAlertToggle"
                android:clickable="true"
                android:focusable="true"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <TableLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/cell_Height"
                    android:gravity="center_vertical">
                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="20dip">
                        <TextView
                            android:text="Send alert when credit limit is within"
                            android:textSize="@dimen/TextSizeMedium"
                            android:textColor="@color/TextViewTextColor"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight=".9" />
                    </TableRow>
                </TableLayout>
            </TableRow>
            <TableRow
                android:id="@+id/rowAlertSetting"
                android:clickable="true"
                android:focusable="true"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <TableLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/cell_Height"
                    android:gravity="center_vertical"
                    android:layout_gravity="right">
                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="20dip">
                        <EditText
                            android:id="@+id/txtAlertSetting"
                            android:layout_marginRight="20dp"
                            android:inputType="numberDecimal"
                            android:maxLength="15"
                            android:minWidth="175dp"
                            android:scrollHorizontally="true"
                            android:scrollbars="none"
                            android:textSize="@dimen/TextSizeMedium"
                            android:layout_gravity="center_vertical"
                            android:width="150dp"
                            android:gravity="right"
                            android:hint="Enter Amount" />
                    </TableRow>
                </TableLayout>
            </TableRow>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:layout_weight="1"
                android:background="@drawable/default_separatorcolor"
                android:padding="2dip" />
        </TableLayout>
    </ScrollView>
</LinearLayout>