<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:background="@drawable/background_nobar"
        android:scrollbars="none">
        <TableLayout
            android:id="@+id/mainTable"
            android:stretchColumns="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TableRow
                android:id="@+id/accountRow"
                android:clickable="true"
                android:focusable="true"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <TableLayout
                    android:id="@+id/accountTable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:stretchColumns="0"
                    android:clipChildren="false"
                    android:clipToPadding="false">
                    <TableRow
                        android:id="@+id/accountTableRow1"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:clipChildren="false"
                        android:clipToPadding="false"
                        android:paddingTop="5dip">
                        <TextView
                            android:text="Funding Account"
                            android:id="@+id/lblTrnFrom"
                            android:textSize="@dimen/TextSizeLarge"
                            android:textColor="@color/TextViewTextColor"
                            android:textStyle="bold"
                            android:paddingLeft="10dip"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_span="3" />
                    </TableRow>
                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:id="@+id/tableRow8">
                        <TextView
                            android:id="@+id/txtSourceHeaderText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/TextSizeLarge"
                            android:textColor="@color/TextViewTextColor"
                            android:text="SPECIAL SAVINGS"
                            android:layout_span="3"
                            android:paddingLeft="24dip"
                            android:layout_weight="1" />
                    </TableRow>
                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:id="@+id/tableRow9">
                        <TextView
                            android:id="@+id/txtSourceHeader2Text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="20"
                            android:textSize="@dimen/TextSizeLarge"
                            android:textColor="@color/TextViewTextColor"
                            android:text="0000000-0000"
                            android:layout_span="3"
                            android:paddingLeft="24dp" />
                        <ImageView
                            android:paddingTop="0dp"
                            android:layout_gravity="center_vertical"
                            android:cropToPadding="false"
                            android:paddingRight="2dip" />
                    </TableRow>
                    <TableRow
                        android:id="@+id/tableRow10">
                        <TextView
                            android:textColor="@color/TextViewTextColor"
                            android:lineSpacingMultiplier="0.90"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/TextSizeMedium"
                            android:layout_weight="1" />
                        <TextView
                            android:id="@+id/txtSourceItem1Text"
                            android:textColor="@color/TextViewTextColor"
                            android:lineSpacingMultiplier="0.90"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/TextSizeMedium"
                            android:text="Balance:"
                            android:layout_marginRight="20dp"
                            android:layout_width="130dp" />
                        <TextView
                            android:id="@+id/txtSourceValue1Text"
                            android:paddingRight="8dip"
                            android:textColor="@color/TextViewTextColor"
                            android:lineSpacingMultiplier="0.90"
                            android:layout_width="110dp"
                            android:textSize="@dimen/TextSizeMedium"
                            android:gravity="right"
                            android:text="$99,999,999.99" />
                        <ImageView
                            android:id="@+id/imgMore"
                            android:paddingTop="0dp"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center_vertical"
                            android:cropToPadding="false"
                            android:src="@drawable/listitemselect"
                            android:paddingRight="2dip" />
                    </TableRow>
                    <TableRow
                        android:id="@+id/tableRow11">
                        <TextView
                            android:textColor="@color/TextViewTextColor"
                            android:lineSpacingMultiplier="0.90"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/TextSizeMedium"
                            android:layout_weight="1" />
                        <TextView
                            android:id="@+id/txtSourceItem2Text"
                            android:textColor="@color/TextViewTextColor"
                            android:lineSpacingMultiplier="0.90"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/TextSizeMedium"
                            android:text="Available Balance:"
                            android:layout_marginRight="10dp"
                            android:layout_width="130dp" />
                        <TextView
                            android:id="@+id/txtSourceValue2Text"
                            android:paddingRight="8dip"
                            android:textColor="@color/TextViewTextColor"
                            android:lineSpacingMultiplier="0.90"
                            android:layout_width="110dp"
                            android:textSize="@dimen/TextSizeMedium"
                            android:gravity="right"
                            android:text="10/10/2011" />
                        <ImageView
                            android:paddingTop="0dp"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center_vertical"
                            android:cropToPadding="false"
                            android:paddingRight="2dip" />
                    </TableRow>
                </TableLayout>
            </TableRow>
            <View
                android:layout_span="3"
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:layout_weight="1"
                android:background="@drawable/default_separatorcolor"
                android:padding="2dip" />
            <TableRow
                android:id="@+id/bpPayeeRow"
                android:clickable="true"
                android:focusable="true"
                android:layout_width="fill_parent"
                android:minHeight="@dimen/appdim_BillPayScheduleItemHeight"
                android:layout_height="wrap_content">
                <TableLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:stretchColumns="0"
                    android:clipChildren="false"
                    android:clipToPadding="false">
                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:clipChildren="false"
                        android:clipToPadding="false"
                        android:paddingTop="5dip">
                        <TextView
                            android:text="Payee"
                            android:id="@+id/lblPayee"
                            android:textSize="@dimen/TextSizeLarge"
                            android:textColor="@color/TextViewTextColor"
                            android:textStyle="bold"
                            android:paddingLeft="10dip"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_span="3" />
                    </TableRow>
                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent">
                        <TextView
                            android:id="@+id/txtBillPayPayee"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/TextSizeLarge"
                            android:textColor="@color/TextViewTextColor"
                            android:text="Payee Name"
                            android:layout_span="3"
                            android:paddingLeft="24dip"
                            android:layout_weight="1" />
                        <ImageView
                            android:id="@+id/imgMore"
                            android:paddingTop="0dp"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center_vertical"
                            android:cropToPadding="false"
                            android:src="@drawable/listitemselect"
                            android:paddingRight="2dip" />
                    </TableRow>
                </TableLayout>
            </TableRow>
            <View
                android:layout_span="3"
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:layout_weight="1"
                android:background="@drawable/default_separatorcolor"
                android:padding="2dip" />
            <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="0"
                android:clipChildren="false"
                android:clipToPadding="false">
                <TableRow
                    android:id="@+id/amountRow"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:clipChildren="false"
                    android:clipToPadding="true"
                    android:minHeight="@dimen/appdim_BillPayScheduleItemHeight">
                    <TextView
                        android:id="@+id/txtAmountLabel"
                        android:text="Amount"
                        android:layout_width="wrap_content"
                        android:textSize="@dimen/TextSizeLarge"
                        android:textColor="@color/TextViewTextColor"
                        android:textStyle="bold"
                        android:paddingLeft="10dip"
                        android:layout_gravity="center_vertical" />
                    <EditText
                        android:id="@+id/txtAmount"
                        android:layout_marginRight="10dp"
                        android:layout_weight="20"
                        android:inputType="numberDecimal"
                        android:scrollHorizontally="true"
                        android:scrollbars="none"
                        android:textSize="@dimen/TextSizeLarge"
                        android:layout_gravity="right|center_vertical"
                        android:gravity="right"
                        android:hint="Enter Amount"
                        android:width="175dp" />
                </TableRow>
            </TableLayout>
            <View
                android:layout_span="3"
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:layout_weight="1"
                android:background="@drawable/default_separatorcolor"
                android:padding="2dip" />
            <TableLayout
                android:id="@+id/tblBillPayFrequency"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="0"
                android:clipChildren="false"
                android:clipToPadding="false">
                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:clipChildren="false"
                    android:clipToPadding="true"
                    android:minHeight="@dimen/appdim_BillPayScheduleItemHeight">
                    <TextView
                        android:text="Frequency"
                        android:id="@+id/lblFrequency"
                        android:layout_width="wrap_content"
                        android:textSize="@dimen/TextSizeLarge"
                        android:textColor="@color/TextViewTextColor"
                        android:textStyle="bold"
                        android:paddingLeft="10dip"
                        android:layout_gravity="center_vertical" />
                    <Spinner
                        android:id="@+id/spinnerFrequency"
                        android:layout_weight="20"
                        android:minWidth="175dp"
                        android:textSize="@dimen/TextSizeMedium"
                        android:layout_gravity="left|center_vertical"
                        android:width="150dp"
                        android:gravity="right"
                        android:layout_marginRight="5dp" />
                </TableRow>
                <View
                    android:layout_span="3"
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:layout_weight="1"
                    android:background="@drawable/default_separatorcolor"
                    android:padding="2dip" />
            </TableLayout>
            <TableLayout
                android:id="@+id/tblBillPayRepeat"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="0"
                android:clipChildren="false"
                android:clipToPadding="false">
                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:clipChildren="false"
                    android:clipToPadding="true"
                    android:minHeight="40dp">
                    <TextView
                        android:text="Repeat"
                        android:id="@+id/lblBillPayRepeat"
                        android:layout_width="wrap_content"
                        android:textSize="@dimen/TextSizeLarge"
                        android:textColor="@color/TextViewTextColor"
                        android:textStyle="bold"
                        android:paddingLeft="10dip"
                        android:layout_gravity="center_vertical" />
                    <TextView
                        android:text="Until Canceled"
                        android:id="@+id/lblUntilCanceled"
                        android:layout_width="wrap_content"
                        android:textSize="@dimen/TextSizeMedium"
                        android:textColor="@color/TextViewTextColor"
                        android:textStyle="normal"
                        android:layout_gravity="center_vertical"
                        android:width="100dp" />
                    <Switch
                        android:id="@+id/switchUntilCanceled"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="10dp"
                        android:width="60dp" />
                </TableRow>
            </TableLayout>
            <TableLayout
                android:id="@+id/tblBillPayRepeat2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="0"
                android:clipChildren="false"
                android:clipToPadding="false">
                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:clipChildren="false"
                    android:clipToPadding="true">
                    <TextView
                        android:text=""
                        android:id="@+id/lblBillPayBlank"
                        android:layout_width="wrap_content"
                        android:textSize="@dimen/TextSizeLarge"
                        android:textColor="@color/TextViewTextColor"
                        android:textStyle="bold"
                        android:paddingLeft="10dip"
                        android:layout_gravity="center_vertical" />
                    <TextView
                        android:text="Specify"
                        android:id="@+id/lblSpecify"
                        android:layout_width="wrap_content"
                        android:textSize="@dimen/TextSizeMedium"
                        android:textColor="@color/TextViewTextColor"
                        android:textStyle="normal"
                        android:layout_gravity="center_vertical"
                        android:width="100dp" />
                    <EditText
                        android:id="@+id/txtRepeat"
                        android:inputType="number"
                        android:layout_marginRight="10dp"
                        android:layout_weight="20"
                        android:maxLength="4"
                        android:scrollHorizontally="true"
                        android:scrollbars="none"
                        android:textSize="@dimen/TextSizeLarge"
                        android:layout_gravity="right|center_vertical"
                        android:gravity="right"
                        android:width="60dp" />
                </TableRow>
                <View
                    android:layout_span="3"
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:layout_weight="1"
                    android:background="@drawable/default_separatorcolor"
                    android:padding="2dip" />
            </TableLayout>
            <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="0"
                android:clipChildren="false"
                android:clipToPadding="false">
                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:clipChildren="false"
                    android:clipToPadding="true"
                    android:minHeight="@dimen/appdim_BillPayScheduleItemHeight"
                    android:id="@+id/bpWithdrawDateRow">
                    <TextView
                        android:text="Send On Date"
                        android:id="@+id/lblSendOnDate"
                        android:layout_width="wrap_content"
                        android:textSize="@dimen/TextSizeLarge"
                        android:textColor="@color/TextViewTextColor"
                        android:textStyle="bold"
                        android:paddingLeft="10dip"
                        android:layout_gravity="center_vertical" />
                    <TextView
                        android:id="@+id/lblDate"
                        android:text="01/01/2016"
                        android:layout_weight="20"
                        android:textSize="@dimen/TextSizeLarge"
                        android:layout_gravity="right|center_vertical"
                        android:gravity="left"
                        android:layout_marginRight="5dp"
                        android:width="150dp" />
                    <ImageView
                        android:paddingTop="0dp"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center_vertical"
                        android:cropToPadding="false"
                        android:src="@drawable/listitemselect"
                        android:paddingRight="2dip" />
                </TableRow>
            </TableLayout>
            <View
                android:layout_span="3"
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:layout_weight="1"
                android:background="@drawable/default_separatorcolor"
                android:padding="2dip" />
            <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="0"
                android:clipChildren="false"
                android:clipToPadding="false">
                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:clipChildren="false"
                    android:clipToPadding="true"
                    android:minHeight="@dimen/appdim_BillPayScheduleItemHeight">
                    <TextView
                        android:text="Deliver By"
                        android:id="@+id/lblBillPayDeliverBy"
                        android:layout_width="wrap_content"
                        android:textSize="@dimen/TextSizeLarge"
                        android:textColor="@color/TextViewTextColor"
                        android:textStyle="bold"
                        android:paddingLeft="10dip"
                        android:layout_gravity="center_vertical" />
                    <TextView
                        android:id="@+id/lblDeliverBy"
                        android:text="01/01/2016"
                        android:layout_weight="20"
                        android:textSize="@dimen/TextSizeLarge"
                        android:layout_gravity="right|center_vertical"
                        android:width="150dp"
                        android:gravity="left"
                        android:layout_marginRight="5dp" />
                    <ImageView
                        android:paddingTop="0dp"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center_vertical"
                        android:cropToPadding="false"
                        android:paddingRight="2dip" />
                </TableRow>
            </TableLayout>
            <View
                android:layout_span="3"
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:layout_weight="1"
                android:background="@drawable/default_separatorcolor"
                android:padding="2dip" />
            <TableLayout
                android:id="@+id/tblBillPayMemo"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="0"
                android:clipChildren="false"
                android:clipToPadding="false">
                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:clipChildren="false"
                    android:clipToPadding="true"
                    android:minHeight="@dimen/appdim_BillPayScheduleItemHeight">
                    <TextView
                        android:text="Memo"
                        android:id="@+id/lblBillPayDeliverBy"
                        android:layout_width="wrap_content"
                        android:textSize="@dimen/TextSizeLarge"
                        android:textColor="@color/TextViewTextColor"
                        android:textStyle="bold"
                        android:paddingLeft="10dip"
                        android:layout_gravity="center_vertical" />
                    <EditText
                        android:id="@+id/txtBillPayMemo"
                        android:layout_marginRight="10dp"
                        android:layout_weight="20"
                        android:minWidth="175dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:scrollHorizontally="true"
                        android:scrollbars="none"
                        android:textSize="@dimen/TextSizeLarge"
                        android:layout_gravity="right|center_vertical"
                        android:width="150dp" />
                </TableRow>
                <View
                    android:layout_span="3"
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:layout_weight="1"
                    android:background="@drawable/default_separatorcolor"
                    android:padding="2dip" />
            </TableLayout>
            <TableLayout
                android:id="@+id/buttonSubmitTable"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="0"
                android:clipChildren="false"
                android:clipToPadding="false">
                <TableRow
                    android:id="@+id/buttonSubmitRow"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/appdim_BillPayScheduleItemHeight"
                    android:gravity="center"
                    android:layout_gravity="center">
                    <Button
                        android:id="@+id/btnAddPayment"
                        style="@style/BlueGradientButtonStyle"
                        android:layout_width="150dp"
                        android:layout_height="40dp"
                        android:text="Schedule Payment"
                        android:layout_gravity="center"
                        android:minWidth="150dip"
                        android:minHeight="40dip" />
                </TableRow>
            </TableLayout>
        </TableLayout>
    </ScrollView>
</LinearLayout>