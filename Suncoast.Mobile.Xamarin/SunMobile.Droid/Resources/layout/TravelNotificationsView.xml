<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:id="@+id/mainLayout">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:background="@drawable/background_nobar"
        android:scrollbars="none">
        <TableLayout
            android:id="@+id/mainTable"
            android:stretchColumns="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TableRow
                android:id="@+id/rowTravelCards"
                android:clickable="true"
                android:focusable="true"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <TableLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clipChildren="false"
                        android:clipToPadding="false"
                        android:paddingTop="5dip">
                        <TextView
                            android:text="Cards Traveling With"
                            android:textSize="@dimen/TextSizeLarge"
                            android:textColor="@color/TextViewTextColor"
                            android:textStyle="bold"
                            android:paddingLeft="10dip"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/lblCardsTravelingWithHeader" />
                    </TableRow>
                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent">
                        <TextView
                            android:id="@+id/lblTravelCards"
                            android:layout_width="wrap_content"
                            android:layout_height="60dp"
                            android:textSize="@dimen/TextSizeLarge"
                            android:textColor="@color/TextViewTextColor"
                            android:text="VISA"
                            android:paddingLeft="24dip"
                            android:layout_weight=".9" />
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/listitemselect"
                            android:paddingRight="2dip" />
                    </TableRow>
                </TableLayout>
            </TableRow>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:layout_weight="1"
                android:background="@drawable/default_separatorcolor"
                android:padding="2dip" />
            <TableRow
                android:id="@+id/rowTravelDestinations"
                android:clickable="true"
                android:focusable="true"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <TableLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clipChildren="false"
                        android:clipToPadding="false"
                        android:paddingTop="5dip">
                        <TextView
                            android:text="Travel Destinations"
                            android:textSize="@dimen/TextSizeLarge"
                            android:textColor="@color/TextViewTextColor"
                            android:textStyle="bold"
                            android:paddingLeft="10dip"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/lblTravelDestinationsHeader" />
                    </TableRow>
                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent">
                        <TextView
                            android:id="@+id/lblTravelDestinations"
                            android:layout_width="wrap_content"
                            android:layout_height="80dp"
                            android:textSize="@dimen/TextSizeLarge"
                            android:textColor="@color/TextViewTextColor"
                            android:text="Florida"
                            android:scrollHorizontally="true"
                            android:ellipsize="end"
                            android:maxLines="4"
                            android:paddingLeft="24dip"
                            android:layout_weight=".9" />
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/listitemselect"
                            android:paddingRight="2dip" />
                    </TableRow>
                </TableLayout>
            </TableRow>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:layout_weight="1"
                android:background="@drawable/default_separatorcolor"
                android:padding="2dip" />
            <TableRow
                android:id="@+id/rowStartDate"
                android:clickable="true"
                android:focusable="true"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <TableLayout
                    android:layout_width="wrap_content"
                    android:layout_height="42dp">
                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="10dp">
                        <TextView
                            android:text="Travel Start Date"
                            android:textSize="@dimen/TextSizeLarge"
                            android:textColor="@color/TextViewTextColor"
                            android:textStyle="bold"
                            android:paddingLeft="10dip"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight=".9"
                            android:id="@+id/lblTravelStartDateHeader" />
                        <TextView
                            android:id="@+id/lblStartDate"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/TextSizeLarge"
                            android:textColor="@color/TextViewTextColor"
                            android:text="01/01/2016"
                            android:layout_gravity="center_vertical"
                            android:paddingLeft="24dip" />
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/listitemselect"
                            android:paddingRight="2dip" />
                    </TableRow>
                </TableLayout>
            </TableRow>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:layout_weight="1"
                android:background="@drawable/default_separatorcolor"
                android:padding="2dip" />
            <TableRow
                android:id="@+id/rowEndDate"
                android:clickable="true"
                android:focusable="true"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <TableLayout
                    android:layout_width="wrap_content"
                    android:layout_height="42dp">
                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="10dp">
                        <TextView
                            android:text="Travel End Date"
                            android:textSize="@dimen/TextSizeLarge"
                            android:textColor="@color/TextViewTextColor"
                            android:textStyle="bold"
                            android:paddingLeft="10dip"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight=".9"
                            android:id="@+id/lblTravelEndDateHeader" />
                        <TextView
                            android:id="@+id/lblEndDate"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/TextSizeLarge"
                            android:textColor="@color/TextViewTextColor"
                            android:text="01/01/2016"
                            android:layout_gravity="center_vertical"
                            android:paddingLeft="24dip" />
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/listitemselect"
                            android:paddingRight="2dip" />
                    </TableRow>
                </TableLayout>
            </TableRow>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:layout_weight="1"
                android:background="@drawable/default_separatorcolor"
                android:padding="2dip" />
            <TableRow
                android:id="@+id/rowAdditionalInformation"
                android:clickable="true"
                android:focusable="true"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <TableLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clipChildren="false"
                        android:clipToPadding="false"
                        android:paddingTop="5dip">
                        <TextView
                            android:text="Additional Details (Optional)"
                            android:textSize="@dimen/TextSizeLarge"
                            android:textColor="@color/TextViewTextColor"
                            android:textStyle="bold"
                            android:paddingLeft="10dip"
                            android:layout_height="wrap_content"
                            android:layout_weight=".9"
                            android:id="@+id/lblAdditionalDetailsHeader" />
                    </TableRow>
                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent">
                        <TextView
                            android:text="(e.g. method of travel, destination cities, contact number while traveling)"
                            android:lines="2"
                            android:textSize="@dimen/TextSizeMedium"
                            android:textColor="@color/TextViewTextColor"
                            android:paddingLeft="10dip"
                            android:paddingRight="10dip"
                            android:layout_height="wrap_content"
                            android:layout_weight=".9"
                            android:id="@+id/lblAdditionalDetailsExampleHeader" />
                    </TableRow>
                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent">
                        <EditText
                            android:id="@+id/txtAdditionalDetails"
                            android:textSize="@dimen/TextSizeSmall"
                            android:gravity="top"
                            android:paddingLeft="10dip"
                            android:paddingRight="10dip"
                            android:minLines="3"
                            android:layout_height="wrap_content"
                            android:layout_weight=".9" />
                    </TableRow>
                </TableLayout>
            </TableRow>
            <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="0"
                android:clipChildren="false"
                android:clipToPadding="false">
                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center">
                    <Button
                        android:id="@+id/btnSubmit"
                        style="@style/BlueGradientButtonStyle"
                        android:layout_width="150dp"
                        android:layout_height="40dp"
                        android:text="Submit"
                        android:layout_gravity="center"
                        android:minWidth="150dip"
                        android:minHeight="40dip" />
                </TableRow>
            </TableLayout>
        </TableLayout>
    </ScrollView>
</LinearLayout>